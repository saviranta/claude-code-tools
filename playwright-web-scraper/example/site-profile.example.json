{
  "domain": "example-snowboardshop.com",
  "analyzed_at": "2026-02-28T14:32:00",
  "description": "Single snowboard product page with specs, pricing, sizes, and stock status",
  "content": {
    "main_selector": "main.product-detail",
    "present_indicators": [
      "Add to cart",
      "Flex rating",
      "Available sizes"
    ],
    "removed_indicators": [
      "page not found",
      "product.*no longer available",
      "404",
      "out of.*catalogue"
    ]
  },
  "boilerplate": {
    "exclude_selectors": [
      "header",
      "nav",
      "footer",
      "[class*='cookie']",
      "[class*='consent']",
      "[class*='recommendations']",
      "[class*='also-bought']",
      "[class*='social-share']",
      "[class*='promo-banner']",
      "aside"
    ]
  },
  "fields": {
    "product_name": {
      "description": "Full product name",
      "selector": "h1.product-title, [data-testid='product-name']",
      "type": "text"
    },
    "brand": {
      "description": "Brand or manufacturer name",
      "selector": ".product-brand, [data-testid='brand']",
      "type": "text"
    },
    "price": {
      "description": "Current selling price",
      "selector": "[data-testid='price-current'], .price-now",
      "type": "text"
    },
    "original_price": {
      "description": "Original price before discount, if on sale",
      "selector": "[data-testid='price-original'], .price-was",
      "type": "text"
    },
    "sizes": {
      "description": "Available sizes (e.g. 152cm, 155cm, 158cm)",
      "selector": "[data-testid='size-options'], .size-selector button",
      "type": "text"
    },
    "flex_rating": {
      "description": "Flex rating (stiffness scale, typically 1-10)",
      "selector": "[data-label='Flex'], .spec-flex",
      "type": "text"
    },
    "terrain": {
      "description": "Intended terrain type (freestyle, freeride, all-mountain)",
      "selector": "[data-label='Terrain'], .spec-terrain",
      "type": "text"
    },
    "in_stock": {
      "description": "Whether the product is currently in stock",
      "selector": "[data-testid='stock-status'], .availability",
      "type": "text"
    },
    "description": {
      "description": "Full product description text",
      "selector": ".product-description, [data-testid='description']",
      "type": "html"
    }
  },
  "scope_mode": "selective",
  "notes": "Size buttons may be disabled when out of stock â€” check the 'disabled' attribute if stock status parsing is unreliable. Sale prices only appear when a product is discounted, so original_price selector may return empty on full-price items."
}
